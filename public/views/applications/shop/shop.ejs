
<div>
	<div class="row page-title">
		<div class="col-md-12">
			<h2>Online Clothing Store.</h2>
			<p>Replicates an online e-commerce store.</p> 
		</div>
	</div>

	<div class="row category-list">
		<div class="col-md-12">
			<div class="content-alt-1 marginise paddinise">
 
				<div class="col-md-9"> 
				&nbsp;

				</div>
				<div class="col-md-3"> 
						<div ng-Basket="basic"></div> 

				</div>
				
				<div class="col-md-12"> 
					<div class="title">
						<h2>Shop Home</h2>
					</div>
				</div>
				

				<div class="col-md-12">
					<div ng-include src="'/views/applications/shop/includes/breadcrumbs.html'"></div>
				</div>
				<div class="col-md-2"> 
					
					<h4>Select category:</h4>
				</div>
				<div class="col-md-10" ng-controller="shopfront" ng-init="init()">
					<ul class="list-inline category-list">
						<li ng-repeat="category in categories" class="col-xs-6 col-sm-6 col-md-6">
							
							<a href="{{ '/#/shop/products?category=' + category }}" title="{{ category }}">
								<img ng-src="{{ '/assets/images/shop/' + (category.replace(' ', '_')) + '.jpg' }}" alt="{{ category }}" />
							</a>

							<a href="{{ '/#/shop/products?category=' + category }}" title="{{ category }}">{{ category }}</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>


